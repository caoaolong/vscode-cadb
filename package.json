{
  "name": "vscode-cadb",
  "displayName": "vscode-cadb",
  "description": "Powerful database management VSCode plugin!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "datasource",
        "contents": "Welcome to Datasource Explorer!\nConnect to your databases to get started.\n[Add Datasource](command:datasource.addEntry)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "datasource",
          "title": "Datasource Explorer",
          "icon": "resources/icons/logo.svg"
        }
      ],
      "panel": [
        {
          "id": "datasource",
          "title": "Datasource Explorer",
          "icon": "resources/icons/logo.svg"
        }
      ]
    },
    "views": {
      "datasource": [
        {
          "id": "datasource",
          "name": "Datasource Explorer",
          "icon": "resources/icons/logo.svg",
          "contextualTitle": "Datasource Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "datasource.refreshEntry",
        "title": "Refresh Data Sources",
        "icon": {
          "light": "resources/logo-light.svg",
          "dark": "resources/logo-dark.svg"
        }
      },
      {
        "command": "datasource.addEntry",
        "title": "Add Data Source",
        "icon": {
          "light": "resources/add-light.svg",
          "dark": "resources/add-dark.svg"
        }
      },
      {
        "command": "datasource.editEntry",
        "title": "Edit Data Source",
        "icon": {
          "light": "resources/edit-light.svg",
          "dark": "resources/edit-dark.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "datasource.refreshEntry",
          "when": "view == datasource",
          "group": "navigation"
        },
        {
          "command": "datasource.addEntry",
          "when": "view == datasource",
          "group": "navigation"
        },
        {
          "command": "datasource.editEntry",
          "when": "view == datasource",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "datasource.editEntry",
          "when": "view == datasource"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/mysql": "^2.15.27",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "mysql": "^2.18.1",
    "mysql2": "^3.15.3"
  }
}
