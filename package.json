{
  "name": "vscode-cadb",
  "displayName": "vscode-cadb",
  "description": "Powerful database management VSCode plugin!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "datasource",
          "title": "CADB",
          "icon": "resources/icons/logo.svg"
        }
      ],
      "panel": [
        {
          "id": "query",
          "title": "查询结果",
          "icon": "resources/icons/query.svg"
        }
      ]
    },
    "views": {
      "datasource": [
        {
          "id": "datasource",
          "name": "数据源",
          "icon": "resources/icons/logo.svg",
          "contextualTitle": "Datasource Explorer"
        }
      ],
      "query": [
        {
          "type": "webview",
          "id": "query",
          "name": "查询结果",
          "icon": "resources/icons/query.svg",
          "contextualTitle": "Query Result"
        }
      ]
    },
    "commands": [
      {
        "command": "cadb.datasource.add",
        "title": "新建项",
        "icon": {
          "light": "resources/plus-light.svg",
          "dark": "resources/plus-dark.svg"
        }
      },
      {
        "command": "cadb.datasource.refresh",
        "title": "刷新",
        "icon": {
          "light": "resources/refresh-light.svg",
          "dark": "resources/refresh-dark.svg"
        }
      },
      {
        "command": "cadb.datasource.edit",
        "title": "编辑",
        "icon": {
          "light": "resources/edit-light.svg",
          "dark": "resources/edit-dark.svg"
        }
      },
      {
        "command": "cadb.datasource.selectDatabases",
        "title": "选择数据库"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cadb.datasource.refresh",
          "when": "view == datasource",
          "group": "navigation"
        },
        {
          "command": "cadb.datasource.add",
          "when": "view == datasource",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cadb.datasource.refresh",
          "when": "view == datasource && !(viewItem =~ /Type$/)",
          "group": "inline"
        },
        {
          "command": "cadb.datasource.edit",
          "when": "view == datasource && !(viewItem =~ /Type$/)",
          "group": "inline"
        },
        {
          "command": "cadb.datasource.add",
          "when": "view == datasource && viewItem =~ /Type$/",
          "group": "inline"
        },
        {
          "command": "cadb.datasource.selectDatabases",
          "when": "view == datasource && viewItem == datasourceType",
          "group": "context"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/mysql": "^2.15.27",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "dayjs": "^1.11.19",
    "jquery": "^3.7.1",
    "layui": "^2.13.2",
    "mysql": "^2.18.1",
    "mysql2": "^3.15.3",
    "tabulator-tables": "^6.3.1"
  }
}
